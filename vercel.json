{
    "builds": [
      {
        "src": "apps/web/next.config.js",
        "use": "@vercel/next"
      },
      {
        "src": "apps/api/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "apps/api/$1"
      },
      {
        "src": "/web/(.*)",
        "dest": "apps/web/$1"
      }
    ]
  }